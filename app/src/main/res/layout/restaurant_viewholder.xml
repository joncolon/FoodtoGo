<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginTop="2dp"
    android:layout_marginBottom="2dp"
    android:layout_marginEnd="1dp"
    android:layout_marginStart="1dp"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ImageView
            android:id="@+id/claim_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/restaurant_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:textColor="@color/colorPrimaryFont"
            android:textStyle="bold"
            android:textSize="15sp"/>

        <TextView
            android:id="@+id/address_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/restaurant_name"
            android:textColor="@color/colorSecondaryFont"
            />

        <TextView
            android:id="@+id/address_line2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address_line1"
            android:textColor="@color/colorSecondaryFont"
            />



        <TextView
            android:id="@+id/availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/address_line2"
            android:textColor="@color/colorSecondaryFont"/>

        <TextView
            android:id="@+id/phoneNumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/availability"
            android:textColor="@color/colorSecondaryFont"
            />

        <ImageButton
            android:id="@+id/claim"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:layout_marginBottom="4dp"
            android:src="@drawable/checkbox_blank_outline"/>

        <ImageButton
            android:id="@+id/directions"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_toStartOf="@id/claim"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_directions_black_48dp"
            android:layout_marginBottom="3dp"/>

    </RelativeLayout>

</RelativeLayout>