<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <EditText
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/business_name"
        android:textColor="@color/colorFont"/>

    <EditText
        android:id="@+id/address_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_1"
        android:textColor="@color/colorFont"/>

    <EditText
        android:id="@+id/address_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_2"
        android:textColor="@color/colorFont"/>

    <EditText
        android:id="@+id/business_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"/>

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contact_name"
        android:textColor="@color/colorFont"/>

    <EditText
        android:id="@+id/pick_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pick_up_time"
        android:textColor="@color/colorFont"/>

    <EditText
        android:id="@+id/additional_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/additional_instructions"
        android:textColor="@color/colorFont"/>

    <Button
        android:id="@+id/notify_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/notify_button_text"
        android:textColor="@color/colorFont"/>


</LinearLayout>