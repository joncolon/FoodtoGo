<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorBackground"
    android:orientation="vertical">

    <EditText
        android:id="@+id/business_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/business_name"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"
        />

    <EditText
        android:id="@+id/address_line1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_1"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/address_line2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/address_line_2"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/business_phone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/phone_number"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/contact_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/contact_name"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/pick_up_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/pick_up_time"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"/>

    <EditText
        android:id="@+id/additional_instructions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/additional_instructions"
        android:textColor="@color/colorFont"
        android:textColorHint="@color/colorHint"/>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/fab_add_restaurant"
            android:layout_marginStart="@dimen/fab_margin"
            android:layout_marginEnd="25dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_wifi_tethering_white_36dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentEnd="true"
            android:layout_marginBottom="40dp"
            android:layout_width="wrap_content" />
    </RelativeLayout>
</LinearLayout>