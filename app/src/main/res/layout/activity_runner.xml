<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/gradient_green_lite"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:padding="30dp">

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_marginStart="30dp"
        app:cardElevation="8dp">

        <ImageButton
            android:id="@+id/dropoff_btn"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:padding="25dp"
            android:background="@color/colorAccent"
            android:onClick="runnerButtons"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_directions_run_white_48dp"
            android:textColor="@color/colorBackground"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|bottom"
            android:textSize="15dp"
            android:text="Drop off"
            android:layout_marginBottom="5dp"
            android:textColor="#ffffff"/>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="5dp"
        app:cardElevation="8dp"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="30dp">

    <ImageButton
        android:id="@+id/pickup_btn"
        android:onClick="runnerButtons"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:padding="25dp"
        android:layout_gravity="center_horizontal"
        android:background="@color/colorAccent"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_shopping_cart_white_48dp"
        android:textColor="@color/colorBackground"
        />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|bottom"
        android:textSize="15dp"
        android:text="Pick up"
        android:layout_marginBottom="5dp"
        android:textColor="#ffffff"/>

    </android.support.v7.widget.CardView>

</RelativeLayout>