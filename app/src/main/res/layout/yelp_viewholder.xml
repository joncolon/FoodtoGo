<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:layout_marginEnd="2dp"
    android:layout_marginStart="2dp"
    android:layout_marginTop="1dp"
    android:layout_marginBottom="1dp"
    android:background="@color/colorBackground">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:paddingEnd="5dp"
        android:paddingStart="5dp">

        <ImageView
            android:id="@+id/yelp_claim_level_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />

        <TextView
            android:id="@+id/yelp_homeless_TV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginTop="15dp"
            android:text="Restaurant name"
            android:textStyle="bold"
            android:textColor="@color/colorPrimaryFont"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/yelp_address_line1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/yelp_homeless_TV"
            android:text="123 Food Street"
            android:textColor="@color/colorSecondaryFont" />

        <LinearLayout
            android:id="@+id/yelp_address_line2"
            android:layout_below="@+id/yelp_address_line1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/yelp_city"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="city"
                android:textColor="@color/colorSecondaryFont" />

            <TextView
                android:id="@+id/yelp_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:text="state"
                android:textColor="@color/colorSecondaryFont" />

            <TextView
                android:id="@+id/yelp_zipcode"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="zipcode"
                android:textColor="@color/colorSecondaryFont" />
        </LinearLayout>

        <TextView
            android:id="@+id/yelp_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/yelp_address_line2"
            android:text="(123)456-7890"
            android:textColor="@color/colorSecondaryFont" />

        <TextView
            android:id="@+id/yelp_availability"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_below="@+id/yelp_phone_number"
            android:text="6pm - 10pm"
            android:textColor="@color/colorSecondaryFont" />

        <ImageButton
            android:id="@+id/directions"
            android:layout_width="28dp"
            android:layout_height="28dp"
            android:layout_alignParentEnd="true"
            android:layout_alignParentBottom="true"
            android:background="#00ffffff"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_directions_black_48dp"
            android:layout_marginBottom="3dp"/>

    </RelativeLayout>

</RelativeLayout>